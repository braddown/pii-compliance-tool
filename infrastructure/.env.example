# Omnipii Cloud Environment Configuration
# Copy this file to .env and update with your values

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=omnipii

# ===========================================
# JWT Secret (generate with: openssl rand -base64 32)
# ===========================================
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# ===========================================
# Site Configuration
# ===========================================
SITE_URL=https://omnipii.com
API_EXTERNAL_URL=https://api.omnipii.com
ADDITIONAL_REDIRECT_URLS=

# ===========================================
# Authentication Settings
# ===========================================
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
JWT_EXPIRY=3600

# ===========================================
# SMTP Configuration (for email auth)
# ===========================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_ADMIN_EMAIL=noreply@omnipii.com

# ===========================================
# SSL Certificates (paths relative to infrastructure/)
# ===========================================
# These should be obtained via Let's Encrypt:
# certbot certonly --webroot -w ./html -d api.omnipii.com
SSL_CERT_PATH=./certs/fullchain.pem
SSL_KEY_PATH=./certs/privkey.pem
